extends layout

block header
    title Login - BOOX

block content
    .row.justify-content-center
        .col-sm-4
            #login.center-vertical
                form.well(id='form-login', method='post')
                    h2= title
                    h6.mb-5.lead Please log in to your account.
                    .form-group
                        label Username
                        input.form-control(type='text', id='user-tf', name='user')
                    .form-group
                        label Password
                        input.form-control(type='password', id='pass-tf', name='pass')
                    .controls
                        button(id='suibian', type='button').btn.btn-primary.button-sign-in
                            span.glyphicon.glyphicon-lock
                            | Sign In
                    .clearfix
                    hr
                    .btm-links
                        #create-account
                            a(href='/signup') Create An Account
                    .clearfix

    include alert

    script(src='/js/login.js')
